<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.monlivrederecettes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Changer le menu par MainActivity -->
        <activity
            android:name="com.example.monlivrederecettes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.monlivrederecettes.MyRecettesActivity"
            android:label="@string/title_activity_my_recettes"
            android:parentActivityName="com.example.monlivrederecettes.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.monlivrederecettes.MainActivity" />
        </activity>
        <activity
            android:name="com.example.monlivrederecettes.RechercheRecettes"
            android:label="@string/title_activity_recherche_recettes"
            android:parentActivityName="com.example.monlivrederecettes.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.monlivrederecettes.MainActivity" />
        </activity>
        <activity
            android:name="com.example.monlivrederecettes.AjouterRecettes"
            android:label="@string/title_activity_ajouter_recettes"
            android:parentActivityName="com.example.monlivrederecettes.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.monlivrederecettes.MainActivity" />
        </activity>
        <activity
            android:name="com.example.monlivrederecettes.ListeDeCourse"
            android:label="@string/title_activity_liste_de_course"
            android:parentActivityName="com.example.monlivrederecettes.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.monlivrederecettes.MainActivity" />
        </activity>
    </application>

</manifest>
